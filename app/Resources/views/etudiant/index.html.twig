{% extends 'base.html.twig' %}

{% block body %}
    <h1>Etudiants list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Matricule</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Sexe</th>
                <th>Datenaissance</th>
                <th>Lieunaissance</th>
                <th>Nationalite</th>
                <th>Adresse</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etudiant in etudiants %}
            <tr>
                <td><a href="{{ path('etudiant_show', { 'id': etudiant.id }) }}">{{ etudiant.id }}</a></td>
                <td>{{ etudiant.matricule }}</td>
                <td>{{ etudiant.nom }}</td>
                <td>{{ etudiant.prenom }}</td>
                <td>{{ etudiant.sexe }}</td>
                <td>{% if etudiant.dateNaissance %}{{ etudiant.dateNaissance|date('Y-m-d') }}{% endif %}</td>
                <td>{{ etudiant.lieuNaissance }}</td>
                <td>{{ etudiant.nationalite }}</td>
                <td>{{ etudiant.adresse }}</td>
                <td>{{ etudiant.telephone }}</td>
                <td>{{ etudiant.email }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('etudiant_show', { 'id': etudiant.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('etudiant_edit', { 'id': etudiant.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('etudiant_new') }}">Create a new etudiant</a>
        </li>
    </ul>
{% endblock %}
