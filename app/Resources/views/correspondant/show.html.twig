{% extends 'base.html.twig' %}

{% block body %}
    <h1>Correspondant</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ correspondant.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ correspondant.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ correspondant.prenom }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ correspondant.sexe }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ correspondant.telephone }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('correspondant_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('correspondant_edit', { 'id': correspondant.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
